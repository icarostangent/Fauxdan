fauxdan.io, localhost {
    # Handle API requests - must be first and most specific
    handle /api/* {
        reverse_proxy backend:8000
    }

    # Handle static files
    handle /static/* {
        root * /static
        file_server
    }

    # Handle all other requests - serve index.html for SPA routing
    handle {
        root * /frontend
        file_server
        try_files {path} /index.html
    }

    # Enable logging
    log {
        output stdout
        format console
        level INFO
    }
}
