# Build stage for frontend (for production build, not needed in dev)
FROM nginx:alpine

# Install additional tools
RUN apk add --no-cache openssl

# Create necessary directories
RUN mkdir -p /etc/nginx/ssl /var/www/certbot

# Copy Nginx configuration (development version)
COPY nginx/nginx.dev.conf /etc/nginx/nginx.conf

# Copy SSL setup script
COPY nginx/generate-self-signed.sh /usr/local/bin/generate-self-signed.sh
RUN chmod +x /usr/local/bin/generate-self-signed.sh

# Set proper permissions
RUN chown -R nginx:nginx /var/cache/nginx /var/log/nginx /etc/nginx/ssl /var/www/certbot
RUN chmod -R 755 /var/cache/nginx /var/log/nginx /etc/nginx/ssl /var/www/certbot

EXPOSE 80 443

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD wget --no-verbose --tries=1 --spider http://localhost/health || exit 1

# Start script
CMD ["/bin/sh", "-c", "/usr/local/bin/generate-self-signed.sh && nginx -g 'daemon off;'"]
